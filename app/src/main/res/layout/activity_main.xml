<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <WebView android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:padding="8dp"
        android:layout_height="50dp">

        <Button
            android:id="@+id/a1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/a2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/a3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/a4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/a5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/a6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/a7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/a8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>

